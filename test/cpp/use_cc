
cc_compiler=cc_not_defined

if [ ${build_icc} = "yes" ] ; then
  cc_compiler=icc
  cc_linker=icc
else
  if [ ${build_clang} = "yes" ] ; then
    cc_compiler=clang
    cc_linker=clang
  else
    if [ ${build_cl_exe} = "yes" ] ; then
      cc_compiler=./vc++
      cc_linker=./vc++
    else
      cc_compiler=cc
      cc_linker=cc
    fi
  fi
fi

ccflags=
if [ ${build_cl_exe} = "yes" ] ; then

 #ccflags="${ccflags} -DWIN32" 
  echo dummy > /dev/null

else

  if [ ${build_debug} = "yes" ] ; then
    ccflags="${ccflags} -g"
  else
    ccflags="${ccflags} -O2"
  fi

fi

ccflags0="${ccflags}"
